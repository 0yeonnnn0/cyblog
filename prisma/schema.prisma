datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Post {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  createdAt DateTime @default(now())
  content   String
  likes     Int      @default(0)
}

model User {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  email     String   @unique
  pw        String
  name      String
  isLogin   Boolean  @default(false)
  createdAt DateTime @default(now())
}

model Guestbook {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  guestName String
  pw        String
  createdAt DateTime @default(now())
}
